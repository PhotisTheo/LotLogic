# Django Configuration
# Generate a new secret key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=False

# Database
DATABASE_URL=postgresql://user:password@host:port/database

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-bucket.s3.amazonaws.com
USE_S3_FOR_GIS=True

# API Keys
BATCHDATA_API_KEY=your-key
ATTOM_API_KEY=your-key
COURTLISTENER_API_KEY=your-key
OPENAI_API_KEY=your-key

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_CURRENCY=usd
STRIPE_PRICE_INDIVIDUAL_STANDARD=price_xxx
STRIPE_PRICE_TEAM_STANDARD=price_xxx
STRIPE_PRICE_TEAM_PLUS=price_xxx

# Mailer Configuration
MAILER_CONTACT_PHONE=555-5555
MAILER_TEXT_KEYWORD=HOME
MAILER_AGENT_NAME=Your Name
MAILER_AI_ENABLED=1
MAILER_OPENAI_MODEL=gpt-4o-mini
MAILER_OPENAI_TEMPERATURE=0.65
MAILER_OPENAI_TIMEOUT=15
MAILER_DEFAULT_PROMPT=concise_letter
MAILER_ZILLOW_TIMEOUT=6

# GIS Data (optional - for local development)
MASSGIS_BOSTON_SHAPEFILE_URL=file:///path/to/shapefile.zip
